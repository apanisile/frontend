pipeline {
     environment {
        registryCredential = 'dockerHub'
        imagename = 'apanisile/k8s-mastery'
        dockerImage = ''
    }
    agent any
    stages {
        stage('Build React Frontend') { 
            steps {
                sh 'cd frontend && npm install' 
                sh './jenkins/scripts/test.sh'
            }
        }
         stage('Build ') { 
            steps {
                sh 'npm test' 
            }
        }
    }
}
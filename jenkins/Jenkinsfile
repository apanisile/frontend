pipeline {
     environment {
        registryCredential = 'dockerHub'
        imagename = 'apanisile/k8s-mastery'
        dockerImage = ''
    }
    agent any
    stages {
        stage('Build') { 
            steps {
                cd frontend 
                sh 'npm start' 
            }
        }
         stage('Test') { 
            steps {
                sh 'npm test' 
            }
        }
    }
}